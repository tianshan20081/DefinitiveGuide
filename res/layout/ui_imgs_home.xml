<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lyVerticalStyle" >

    <ScrollView style="@style/scrollViewStyle" >

        <LinearLayout style="@style/lyVerticalStyle" >

            <LinearLayout style="@style/lyHorizontalStyle" >

                <Button
                    android:id="@+id/btnCircleImg"
                    style="@style/btnItem"
                    android:text="圆角图片" />

                <Button
                    android:id="@+id/btnShapeImg"
                    style="@style/btnItem"
                    android:text="不规则形状照片" />
            </LinearLayout>

            <LinearLayout style="@style/lyHorizontalStyle" >

                <Button
                    android:id="@+id/btnGetPicFromMediaStore"
                    style="@style/btnItem"
                    android:text="从图库选择图片" />
                <Button
                    android:id="@+id/btnGetPicsFromMediaStore"
                    style="@style/btnItem"
                    android:text="从图库选择多张图片" />
            </LinearLayout>
            <LinearLayout style="@style/lyHorizontalStyle" >

                <Button
                    android:id="@+id/btnPicWall"
                    style="@style/btnItem"
                    android:text="照片墙" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>