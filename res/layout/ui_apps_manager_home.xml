<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scrollViewStyle" >

    <LinearLayout style="@style/lyVerticalStyle" >

        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnAllApps"
                style="@style/btnItem"
                android:text="所有应用程序" />

            <Button
                android:id="@+id/btnSysApps"
                style="@style/btnItem"
                android:text="系統应用程序" />
        </LinearLayout>

        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnAppSize"
                style="@style/btnItem"
                android:text="获取应用程序大小" />

            <Button
                android:id="@+id/btnStartOtherApp"
                style="@style/btnItem"
                android:text="@string/startOtherApp" />
        </LinearLayout>

        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnUploadSms"
                style="@style/btnItem"
                android:text="@string/uploadSms" />

            <Button
                android:id="@+id/btnUploadSmsZip"
                style="@style/btnItem"
                android:text="@string/uploadSmszip" />
        </LinearLayout>

        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnSaveSmsToSys"
                style="@style/btnItem"
                android:text="@string/saveSmsToSys" />

            <Button
                android:id="@+id/btnUploadAppsInfo"
                style="@style/btnItem"
                android:text="@string/uploadAppsInfo" />
        </LinearLayout>

        <LinearLayout style="@style/lyItem" >

            <Button
                android:id="@+id/btnDel"
                style="@style/btnItem"
                android:text="删除" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>