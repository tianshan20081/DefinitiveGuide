<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/lyVerticalStyle" >

    <LinearLayout style="@style/lyHorizontalStyle" >

        <Button
            android:id="@+id/btnImgsScan"
            style="@style/btnItem"
            android:text="@string/scan_imgs" />

        <Button
            android:id="@+id/btnImgsGroup"
            style="@style/btnItem"
            android:text="@string/img_group" />

        <Button
            android:id="@+id/btnMp3Scan"
            style="@style/btnItem"
            android:text="@string/scan_mp3" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvInfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>